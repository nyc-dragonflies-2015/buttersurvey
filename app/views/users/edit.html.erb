<%= render 'layouts/header' %>

<h1>Update Your Profile</h1>

<%=form_for :user, url: user_path(@user), method:  :patch do|f| %>
  <%= f.label :name %>
  <%= f.text_field :name %> <br>
  <%= f.label :email %>
  <%= f.text_field :email %> <br>
  <%= f.label :password %>
  <%= f.password_field :password %> <br>
  <%= f.submit %>
  <% end %>