
<% if flash[:notice] %>
  <p>Click <%= link_to "here" , @survey %> to submit your survey</p>
<% end %>
<br>


  <%= form_for @question, url: survey_questions_path(@survey.id), method: :post do |f| %>
    <%= f.label :Question %>
    <%= f.text_field :body %>
    <%= hidden_field_tag 'survey_id', @survey.id %>
    <%= f.submit "Create Question" %>
  <% end %>


